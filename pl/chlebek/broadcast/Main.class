package pl.chlebek.broadcast;

import org.bukkit.Bukkit;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.plugin.java.JavaPlugin;

public class Main extends JavaPlugin{

	private String noPermissionsMsg = getConfig().getString("noPermissions").replaceAll("&", "§");
	private String broadcastPrefix = getConfig().getString("broadcastPrefix").replaceAll("&", "§");
	private String staffBroadcastPrefix = getConfig().getString("staffBroadcastPrefix").replaceAll("&", "§");
	private String staffBroadcastPermission = getConfig().getString("staffBroadcastPermission");
	private static Main instance;

	public static Main getInst(){
		return instance;
	}

	public void onEnable(){
		instance = this;
	}

	@Override
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) {
		if(cmd.getName().equalsIgnoreCase("broadcast")){
			if(!(sender.hasPermission("chbc.broadcast"))){
				sender.sendMessage(noPermissionsMsg);
				return false;
			}
			if(args.length == 0){
				sender.sendMessage("§cUzyj: /broadcast <Wiadomosc..>");
				return false;
			}
			StringBuilder str = new StringBuilder();
			for(int i=0; i<args.length; i++) {
				str.append(args[i] + " ");
			}
			Bukkit.broadcastMessage(broadcastPrefix + " " + str.toString().replaceAll("&", "§"));
		}
		if(cmd.getName().equalsIgnoreCase("sbroadcast")){
			if(!(sender.hasPermission("chbc.sbroadcast"))){
				sender.sendMessage(noPermissionsMsg);
				return false;
			}
			if(args.length == 0){
				sender.sendMessage("§cUzyj: /broadcast <Wiadomosc..>");
				return false;
			}
			StringBuilder str = new StringBuilder();
			for(int i=0; i<args.length; i++){
				str.append(args[i] + " ");
			}
			Bukkit.broadcast(staffBroadcastPrefix + " " + str.toString().replaceAll("&", "§"), staffBroadcastPermission);
		}
		return false;
	}

}
